rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ARTICLES: Public can read, only authenticated users can create/update/delete (further rules needed for admin-only)
    match /articles/{articleId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null;
    }

    // SUBSCRIBERS: Only authenticated users can manage
    match /subscribers/{email} {
      allow read, create, update, delete: if request.auth != null;
    }

    // CONTACT MESSAGES: Only authenticated users can manage
    match /contact_messages/{messageId} {
      allow read, create, update, delete: if request.auth != null;
    }

    // SITE VIEWS: Public can read, anyone can increment (write is needed for increment)
    match /site/views {
      allow read: if true;
      allow write: if true; // Allows incrementing views
    }
  }
}
